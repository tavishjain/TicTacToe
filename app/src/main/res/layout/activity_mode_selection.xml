<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".ModeSelectionActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="          With AI           "
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:id="@+id/btn_play_with_AI"
        android:onClick="playAI"
        android:background="@drawable/back_yellow_circle"/>

    <Button
        android:layout_width="wrap_content"
        android:onClick="playPlayer"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/btn_play_with_player"
        android:text="          With Player           "
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/back_yellow_circle"/>


</RelativeLayout>